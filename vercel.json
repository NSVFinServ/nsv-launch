{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "routes": [
    { "handle": "filesystem" },

    { "src": "/sitemap.xml", "dest": "/api/sitemap" },
    { "src": "/robots.txt", "dest": "/robots.txt" },

    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
